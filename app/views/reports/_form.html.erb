<%= form_with(model: report, class: "contents") do |form| %>
  <% if report.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
        <% report.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :student_id, value: student_id %>

  <h6>Progress Report for
    <%= DateTime.now.strftime('%m/%d/%Y') %>
  </h6>

  <%= form.hidden_field :date, value: DateTime.now %>
  <% student = Student.find(student_id) %>
  <% teacher = student.teacher %>
  <div>
    <div class="inline-block">
      <h6>Student: </h6>
    </div>
    <div class="inline-block">
      <%= student.name %>
    </div>
  </div>

  <h3>Professor: <%= teacher.name %></h3>
  <h3>Last login was: <%= student.last_login %></h3>

  <% student.enrollments.each do |enrollment| %>
    <% course = Course.find(enrollment.course_id) %>
    <div class="my-5">
      <%= form.label course.name %>: <%= enrollment.grade %>
  <% end %>
  </div>
  <div class="my-5">
    <%= form.label :comments %>
    <%= form.text_area :comments, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>